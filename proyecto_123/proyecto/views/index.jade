        div(id="wizardV")
            h2 Salas
            section
                div(class="col-lg-6 col-lg-offset-1")
                    div(class="panel panel-success")
                        div(class="panel-heading")
                            h3(class="panel-title") Crear Nueva Sala
                        div(class="panel-body")
                            form(role="form")    
                                div(class="form-group input-group")
                                    span(class="input-group-addon") Nombre de Sala
                                    input(type="text" name="name_sala" id="name_sala" class="form-control" placeholder="Nombre de la Sala")

                                div(class="form-group input-group")
                                    span(class="input-group-addon") Tipo de Partida
                                    select(name="category" class="form-control")
                                        option(value="publico") PÃºblico
                                        option(value="privado") Privado

                                div(class="form-group input-group")
                                    span(class="input-group-addon") Preguntas
                                    select(name="category" class="form-control")
                                        option(value="") 5
                                        option(value="") 10
                                        option(value="") 15
                                        option(value="") 20
                                        option(value="") 25

                                div(class="form-group input-group")
                                    span(class="input-group-addon") Tiempo de Respuesta
                                    select(name="category" class="form-control")
                                        option(value="") 5 Segundos
                                        option(value="") 10 Segundos
                                        option(value="") 15 Segundos
                                        option(value="") 20 Segundos
                                        option(value="") 25 Segundos
                                                         
                                div(class="form-group input-group")
                                    span(class="input-group-addon") Categorias
                                    select(name="category" multiple="" class="form-control")
                                        option(value="") Ciencia Ficcion
                                        option(value="") Quimica
                                        option(value="") Entretenimiento
                                        
                div(class="col-lg-4")
                    div(class="panel panel-success")
                        div(class="panel-heading")
                            h3(class="panel-title") Salas Creadas
                        div(class="panel-body" style="max-height:320px;overflow-y: scroll;")
                            div(class="list-group" id="salas" name="salas")
                    

            h2 Chat
            section
                .row
                    #formModal.modal
                        .modal-dialog
                            .modal-content
                                .modal-header
                                    h2.title-modal
                                .modal-body
                                    p.formModal
                                .modal-footer
                    #title
                        h2(id="title" name="title") Bienvenido al chat
                    .col-md-9#containerMessages
                        .panel.panel-primary.head
                            .panel-heading
                                p Mensajes de la sala
                        #chatMsgs
                    .col-md-3#containerUsers
                        .panel.panel-primary.head
                            .panel-heading
                                p Usuarios
                        #chatUsers
                    .col-md-7#containerSendMessages
                        input.message.col-md-12.form-control(type="text",placeholder="Escribe un mensaje")
                    .col-md-2#containerSendMessages
